@inherits LayoutComponentBase
@namespace BlazorApp.Client.Shared

<div class="modern-layout">
    <header class="modern-header">
        <div class="header-content">
            <a class="brand-logo" href="">
                <span class="brand-icon">🎯</span>
                <span class="brand-text">WORDS</span>
                <span class="brand-subtitle">Game Hub</span>
            </a>
            <button accesskey="-" 
                    title="Navigation menu (-)" 
                    class="menu-toggle @(collapseNavMenu ? "" : "active")" 
                    @onclick="ToggleNavMenu">
                <span class="menu-icon">
                    <span class="menu-line"></span>
                    <span class="menu-line"></span>
                    <span class="menu-line"></span>
                </span>
            </button>
        </div>
    </header>

    <div class="layout-body @(collapseNavMenu ? "" : "menu-open")">
        <aside class="modern-sidebar @(collapseNavMenu ? "collapsed" : "expanded")">
            <NavMenu NavMenuCssClass="nav-menu" ToggleNavMenu="ToggleNavMenu" />
        </aside>
        
        <main class="main-content">
            <div class="content-wrapper">
                @Body
            </div>
        </main>
    </div>

    <div class="sidebar-overlay @(collapseNavMenu ? "" : "visible")" @onclick="ToggleNavMenu"></div>
</div>

@code {
    private bool collapseNavMenu = true;
    
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
