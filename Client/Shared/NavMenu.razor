<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            Words
            <span class="text-info" style="font-size:xx-small"></span></a>

        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>
<div class="background">
    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink accesskey="h" class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> <u>H</u>ome
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="words">
                    <span class="oi oi-book" aria-hidden="true"></span> Words
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="definitions">
                    <span class="oi oi-bug" aria-hidden="true"></span> Definitions
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="playcodele">
                    <span class="oi oi-book" aria-hidden="true"></span>Codele
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="https://www.wordsapi.com" target="_blank">
                    <span class="oi oi-code" aria-hidden="true"></span>Words API
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="https://github.com/Mark-Phillipson/cautious-robot" target="_blank">
                    <span class="oi oi-code" aria-hidden="true"></span>Github repository
                </NavLink>
            </div>
        </nav>
    </div>
</div>
<p class='text-secondary mx-2' style='font-size:10px; position: fixed; bottom: 0; left: 0; right: 0;'>Using
    @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription</p>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
