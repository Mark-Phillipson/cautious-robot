@page "/sound";
		@if (Play)
		{
			<audio autoplay controls hidden>
				@if (AnswerState)
				{
				<source src="/Correct.mp3" />
				}
				else
				{
				<source src="/Incorrect.mp3" />
				}
			</audio>
		}
		else
		{
			<audio controls muted hidden>
				@if (AnswerState)
				{
				<source src="/Correct.mp3" />
				}
				else
				{
				<source src="/Incorrect.mp3" />
				}
			</audio>
		}
@code
{
	[Parameter]
	public bool Play { get; set; }= true;
	[Parameter]
	public bool AnswerState { get; set; } = false;
}