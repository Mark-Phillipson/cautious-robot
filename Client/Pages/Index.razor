@page "/"
@inject HttpClient Http

<PageTitle>Words</PageTitle>
<div class="home-background">
    <div class="hero-container">
        <div class="hero-card">
            <h1 class="hero-title">🎯 Welcome to Words</h1>
            <p class="hero-subtitle">Your ultimate destination for word games and learning</p>
        </div>
    </div>

    <div class="games-grid">
        <a accesskey="w" class="game-card-link" href="words/">
            <div class="game-card">
                <div class="game-icon">🎯</div>
                <h3 class="game-title">Words Game</h3>
                <p class="game-description">Challenge yourself with word puzzles</p>
                <div class="game-button primary">
                    <span>Play <u>W</u>ords</span>
                    <span class="shortcut-badge">W</span>
                </div>
            </div>
        </a>

        <a accesskey="s" class="game-card-link" href="definitions/">
            <div class="game-card">
                <div class="game-icon">📚</div>
                <h3 class="game-title">Definitions</h3>
                <p class="game-description">Match words with their meanings</p>
                <div class="game-button primary">
                    <span>Definition<u>s</u></span>
                    <span class="shortcut-badge">S</span>
                </div>
            </div>
        </a>

        <a accesskey="c" class="game-card-link" href="playcodele/">
            <div class="game-card">
                <div class="game-icon">💻</div>
                <h3 class="game-title">Codele</h3>
                <p class="game-description">Code-based word puzzles</p>
                <div class="game-button primary">
                    <span><u>C</u>odele</span>
                    <span class="shortcut-badge">C</span>
                </div>
            </div>
        </a>

        <a accesskey="h" class="game-card-link" href="hangman/">
            <div class="game-card">
                <div class="game-icon">🎪</div>
                <h3 class="game-title">Hangman</h3>
                <p class="game-description">Classic word guessing game</p>
                <div class="game-button primary">
                    <span><u>H</u>angman</span>
                    <span class="shortcut-badge">H</span>
                </div>
            </div>
        </a>

        <a accesskey="a" class="game-card-link" href="aiwordtutor/">
            <div class="game-card">
                <div class="game-icon">🤖</div>
                <h3 class="game-title">AI Word Tutor</h3>
                <p class="game-description">Learn with AI assistance</p>
                <div class="game-button info">
                    <span><u>A</u>I Word Tutor</span>
                    <span class="shortcut-badge">A</span>
                </div>
            </div>
        </a>

        <a accesskey="r" class="game-card-link" href="scrabblegame/">
            <div class="game-card">
                <div class="game-icon">🎲</div>
                <h3 class="game-title">Scrabble Game</h3>
                <p class="game-description">Build words, score points</p>
                <div class="game-button success">
                    <span>Scrabble Game</span>
                    <span class="shortcut-badge">R</span>
                </div>
            </div>
        </a>
    </div>

    <div class="tech-section">
        <h2 class="tech-title">Built With Modern Technology</h2>
        <div class="tech-cards">
            <div class="tech-card">
                <a href="https://dotnet.microsoft.com/apps/aspnet/web-apps/blazor" target="_blank">
                    <img src="/images/BlazorIcon.png" class="tech-logo" alt="Blazor Logo">
                </a>
                <div class="tech-content">
                    <h5 class="tech-name">Blazor</h5>
                    <p class="tech-description">WebAssembly Application</p>
                </div>
            </div>
            
            <div class="tech-card">
                <a href="https://dotnet.microsoft.com/apps/aspnet" target="_blank">
                    <img src="/images/ASP-NET-logo.png" class="tech-logo" alt="ASP.NET Logo">
                </a>
                <div class="tech-content">
                    <h5 class="tech-name">ASP.NET</h5>
                    <p class="tech-description">Web Application Framework</p>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-info">
        Using @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription
    </div>
</div>