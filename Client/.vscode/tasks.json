{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "dotnet build",
			"command": "dotnet build",
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"type": "shell",
			"label": "test: run all tests",
			"command": "dotnet test",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}/../Client.Tests"
			},
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"type": "shell",
			"label": "test: run with coverage",
			"command": "dotnet test --collect:\"XPlat Code Coverage\"",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}/../Client.Tests"
			},
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"type": "shell",
			"label": "test: run verbose",
			"command": "dotnet test --verbosity normal",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}/../Client.Tests"
			},
			"problemMatcher": [
				"$msCompile"
			]
		}
	]
}